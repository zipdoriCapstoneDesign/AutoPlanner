<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="20dp">

    <LinearLayout
        android:id="@+id/ll_schedule_color"
        android:layout_width="3dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:orientation="horizontal" />

    <TextView
        android:id="@+id/tv_schedule_title"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:paddingLeft="10dp"
        android:textSize="15dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/ll_schedule_color"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/tv_schedule_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="3dp"
        android:paddingLeft="10dp"
        android:textSize="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_schedule_title"
        app:layout_constraintLeft_toLeftOf="@id/tv_schedule_title"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>