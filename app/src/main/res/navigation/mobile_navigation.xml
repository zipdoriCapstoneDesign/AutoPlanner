<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.zipdori.autoplanner.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_nav_text_input"
            app:destination="@id/nav_text_input" />
    </fragment>

    <fragment
        android:id="@+id/nav_text_input"
        android:name="com.zipdori.autoplanner.ui.textinput.TextInputFragment"
        android:label="@string/menu_text_input"
        tools:layout="@layout/fragment_text_input" />

    <fragment
        android:id="@+id/nav_slideshow"
        android:name="com.zipdori.autoplanner.ui.slideshow.SlideshowFragment"
        android:label="@string/menu_slideshow"
        tools:layout="@layout/fragment_slideshow" />
</navigation>